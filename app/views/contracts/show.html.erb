<h1>Store#show</h1>
<p>Find me in app/views/store/show.html.erb</p>

<p id="notice">
    <%= notice %>
</p>
<div class="header">
    <h1>Stores</h1>
    <%= link_to 'New Store', new_store_path, class: 'button principal-button' %>
</div>

<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <%= @store.code %>
            </td>
            <td>
                <%= @store.name %>
            </td>
            <td>
                <%= @store.description %>
            </td>
            <td>
                <%= link_to 'Edit', edit_store_path(@store) %>
            </td>
            <td>
                <%= link_to 'Destroy', @store, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>

    </tbody>
</table>
<br/>